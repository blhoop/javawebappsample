node {
  stage('init') {
    checkout scm
  }
  
  stage('build') {
    sh 'mvn clean package'
  }
  
  stage('deploy') {
    def resourceGroup = 'jenkins-rsg'
    def webAppName = 'jenkins99test'
    sh 'mv target/*.war target/ROOT.war'
    azureWebAppPublish azureCredentialsId: '109cc2b1-ff28-447d-a5d4-eb28dd66b80b', publishType: 'file',
                       resourceGroup: resourceGroup, appName: webAppName,
                       filePath: '*.war', sourceDirectory: 'target', targetDirectory: 'webapps'
  }
}
